<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    style="Widget.MaterialComponents.CardView"
    >

    <TextView
        android:id="@+id/date_history_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@color/text_secondary.history_card"
        />

    <LinearLayout
        android:id="@+id/history_card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/history_card_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description.history_images"
            android:paddingBottom="29dp"
            android:paddingEnd="29dp"
            android:paddingStart="35dp"
            android:paddingTop="29dp"
            app:srcCompat="@drawable/ic_account_circle_33"
            app:tint="@color/black"
            />

        <ImageView
            android:id="@+id/history_card_image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description.history_images"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="26dp"
            />

        <ImageView
            android:id="@+id/history_card_image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description.history_images"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="26dp"
            />

        <ImageView
            android:id="@+id/history_card_image4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_description.history_images"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="29dp"
            />

        <TextView
            android:id="@+id/history_card_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size.regular_big"
            />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
